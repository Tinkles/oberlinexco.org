.page-header
  %h1 Users

%table.table.table-striped
  %tr
    %th Email
    %th Name
    %th T number
    %th Admin
    %th
    - if can? :update, User
      %th
    - if can? :delete, User
      %th
  - @users.each do |user|
    %tr
      %td= user.email
      %td= user.name
      %td= user.t_number
      %td= user.admin
      %td= link_to 'Show', user
      - if can? :update, User
        %td= link_to 'Edit', edit_user_path(user)
      - if can? :delete, User
        %td= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete
